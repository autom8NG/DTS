{
  "name": "dts-task-management",
  "version": "1.0.0",
  "description": "DTS Task Management System - Full Stack Application",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:coverage": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run test:backend -- --coverage\" \"npm run test:frontend -- --coverage\"",
    "lint": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "start": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && rm -rf node_modules dist coverage database.db",
    "clean:frontend": "cd frontend && rm -rf node_modules dist coverage"
  },
  "keywords": [
    "task-management",
    "fullstack",
    "react",
    "express",
    "typescript"
  ],
  "author": "autom8NG",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
